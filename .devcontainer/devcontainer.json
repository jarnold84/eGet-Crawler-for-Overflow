{
  "name": "eGet-Crawler",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",

  "features": {},

  "remoteUser": "vscode"
}
